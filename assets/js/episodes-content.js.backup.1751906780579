// エピソード取得関数（シンプル版）
function getEpisodeContent(series, episodeNumber) {
    const episodes = EPISODES_CONTENT[series];
    if (!episodes || !episodes[episodeNumber]) {
        // デフォルトコンテンツ
        return {
            title: `第${episodeNumber}話`,
            date: "2025年",
            location: getDefaultLocation(series, episodeNumber),
            content: `
                <div style="text-align: center; padding: 3rem;">
                    <h2>📝 エピソード準備中</h2>
                    <p>このエピソードの内容は現在準備中です。</p>
                    <p style="color: #666; margin-top: 2rem;">
                        エピソード${episodeNumber}は近日公開予定です。<br>
                        更新をお待ちください。
                    </p>
                    <div style="margin-top: 2rem;">
                        <a href="europe2025-blog.html" style="background: #0099cc; color: white; padding: 1rem 2rem; border-radius: 8px; text-decoration: none;">
                            📋 一覧に戻る
                        </a>
                    </div>
                </div>
            `
        };
    }
    
    return episodes[episodeNumber];
}

// デフォルトロケーション取得
function getDefaultLocation(series, episodeNumber) {
    if (series === 'europe2025') {
        return '🇮🇪 アイルランド';
    } else if (series === 'europe2025_2') {
        if (episodeNumber >= 165 && episodeNumber <= 167) return '🇩🇰 デンマーク';
        if (episodeNumber >= 168 && episodeNumber <= 178) return '🇸🇪 スウェーデン';
        if (episodeNumber >= 179 && episodeNumber <= 187) return '🇵🇱 ポーランド';
        if (episodeNumber >= 188 && episodeNumber <= 195) return '🇳🇴 ノルウェー';
        if (episodeNumber >= 196 && episodeNumber <= 201) return '🇮🇪 アイルランド';
        if (episodeNumber >= 202 && episodeNumber <= 207) return '🇦🇪 ドバイ';
        if (episodeNumber >= 208 && episodeNumber <= 225) return '🇫🇷 フランス';
        if (episodeNumber >= 226 && episodeNumber <= 231) return '🇯🇵🇨🇳 日本・上海';
        if (episodeNumber >= 232 && episodeNumber <= 243) return '🇱🇻🇱🇹🇪🇪 バルト三国';
        if (episodeNumber >= 244 && episodeNumber <= 253) return '🇬🇧 イギリス';
    }
    return '🌍 ヨーロッパ';
}

// 管理者用：新しいエピソードを簡単に追加するためのテンプレート
function createEpisodeTemplate(series, episodeNumber, title, location) {
    return `
        ${episodeNumber}: {
            title: "${episodeNumber}:${title}",
            date: "2025年月日",
            location: "${location}",
            content: \`
                <h2>${title}</h2>
                <p>エピソードの内容をここに書きます。</p>
                
                <h3>見出し</h3>
                <p>詳細な内容...</p>
                
                <blockquote>
                    引用や感想をここに...
                </blockquote>
                
                <ul>
                    <li>ポイント1</li>
                    <li>ポイント2</li>
                    <li>ポイント3</li>
                </ul>
                
                <p>まとめの文章...</p>
            \`
        },
    `;
}

